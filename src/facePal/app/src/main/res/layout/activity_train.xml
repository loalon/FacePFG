    <EditText
        android:id="@+id/editText"
        android:layout_width="385dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir cara"
        android:id="@+id/button_addFace"
        android:layout_gravity="bottom|left"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir persona"
        android:id="@+id/button_addPerson"
        android:layout_gravity="bottom|right"
        android:clickable="false"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/imageview_train"
        android:layout_width="282dp"
        android:layout_height="289dp"
        android:layout_above="@+id/button_image"
        android:layout_gravity="center|center"
        app:srcCompat="@drawable/facepal"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="47dp" />

</android.support.design.widget.CoordinatorLayout>
